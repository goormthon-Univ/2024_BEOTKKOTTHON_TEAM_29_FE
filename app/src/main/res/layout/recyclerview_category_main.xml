<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_margin="10dp">

    <LinearLayout
        android:id="@+id/recyclerview_category_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/rect_radius_low"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </LinearLayout>

    <TextView
        android:id="@+id/recyclerview_category_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="프로그래밍 기초"
        app:layout_constraintBottom_toBottomOf="@+id/recyclerview_category_layout"
        app:layout_constraintEnd_toEndOf="@+id/recyclerview_category_layout"
        app:layout_constraintStart_toStartOf="@+id/recyclerview_category_layout"
        app:layout_constraintTop_toTopOf="@+id/recyclerview_category_layout" />

    <TextView
        android:id="@+id/recyclerview_category_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:textSize="24sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/recyclerview_category_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/recyclerview_category_layout"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>